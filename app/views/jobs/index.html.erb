<h1>Listing Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Min wage</th>
      <th>Max wage</th>
      <th>Time</th>
      <th>Location</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render partial: "shared/job", collection: @jobs %>
  </tbody>
</table>

<br>

<% if employer_signed_in? %>
  <%= link_to 'New Job', new_job_path %>
<% end %>
