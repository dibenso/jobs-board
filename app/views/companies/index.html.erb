<% @companies.each do |company| %>
  <h2><%= link_to company.name, company_path(company) %></h2>
  <%= link_to image_tag(company.logo.url(:thumb)), company_path(company) %><br>
  <% if company.url %>
    <small>Visit <%= link_to "#{company.name} website", company.url %></small>
  <% end %>
  <!-- Fix below link -->
  <p><%= link_to pluralize(company.jobs.count, "job"), "/companies/#{company.id}/jobs" %></p>
  <%= link_to pluralize(company.reviews.count, "review"), company_path(company, anchor: 'reviews') %>
<% end %>
<hr>
<% @companies_with_jobs.each do |company| %>
  <p><%= company.name %></p>
  <p><%= company.jobs.count %></p>
<% end %>
<hr>
<% @companies_with_reviews.each do |company| %>
  <p><%= company.name %></p>
  <p><%= company.reviews.count %></p>
<% end %>
