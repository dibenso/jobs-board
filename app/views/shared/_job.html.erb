<%= link_to image_tag(job.company.logo.url(:thumb)), company_path(job.company) %>
<p><%= job.job_category %></p>
<p><%= job.location %></p>
<p><%= pluralize(job.apply_count, 'person') %> 
applied to this job</p>
<% if job.time == 'Full' || job.time == 'Part' %>
  <p><%= job.time %> time</p>
<% else %>
  <p><%= job.time %></p>
<% end %>
<% if job.steady_wage? %>
  <p><%= number_to_currency(job.max_wage) %></p>
<% else %>
  <p><%= number_to_currency(job.min_wage) %> - <%= number_to_currency(job.max_wage) %></p>
<% end %>
<p>Posted: <%= job.created_at.to_time.strftime('%B %e at %l:%M %p') %></p>
