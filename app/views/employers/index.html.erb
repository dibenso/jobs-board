<h1>Listing Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Min wage</th>
      <th>Max wage</th>
      <th>Time</th>
      <th>Location</th>
      <th>Category</th>
      <th>Application count</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render partial: "shared/job", collection: @jobs %>
  </tbody>
</table>

<br>

<% unless current_employer.company %>
  <h2>Add company</h2>
  <%= form_for @company, url: employers_add_company_path do |f| %>
    <% if @company.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

        <ul>
        <% @companye.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :url %><br>
      <%= f.text_field :url %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
  <h2>Or</h2><br>
  <h2>Join Company</h2>
  <%= form_tag(employers_join_company_path) %>
  <%= text_field_tag('company_key') %><br>
  <%= submit_tag('Join') %><br>
<% end %>

